{
  "dashboard": {
    "title": "Job Sight Application Monitoring",
    "description": "Comprehensive monitoring dashboard for Job Sight application",
    "version": "1.0.0",
    "panels": [
      {
        "title": "Application Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"job-sight\"}",
            "legendFormat": "Application Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ]
      },
      {
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per second",
            "min": 0
          }
        ]
      },
      {
        "title": "Job Searches by Location",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(job_searches_total) by (location)",
            "legendFormat": "{{location}}"
          }
        ]
      },
      {
        "title": "API Call Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(api_calls_total{status=\"success\"}[5m]) / rate(api_calls_total[5m]) * 100",
            "legendFormat": "API Success Rate (%)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "title": "Database Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(database_operations_total[5m])",
            "legendFormat": "{{operation}} on {{table}}"
          }
        ],
        "yAxes": [
          {
            "label": "Operations per second",
            "min": 0
          }
        ]
      },
      {
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users",
            "legendFormat": "Active Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 50}
              ]
            }
          }
        }
      },
      {
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage (%)"
          },
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Usage",
            "min": 0
          }
        ]
      },
      {
        "title": "Custom Business Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(job_searches_total) by (job_title))",
            "legendFormat": "{{job_title}}"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "job_title": "Job Title",
                "Value": "Search Count"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(app_version[1m]) > 0",
          "iconColor": "blue"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "job",
          "type": "query",
          "query": "label_values(http_requests_total, job)",
          "refresh": 2
        },
        {
          "name": "endpoint",
          "type": "query",
          "query": "label_values(http_requests_total{job=\"$job\"}, endpoint)",
          "refresh": 2
        }
      ]
    }
  }
}
